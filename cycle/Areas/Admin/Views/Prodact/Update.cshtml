@model Prodact

<form method="post" enctype="multipart/form-data" asp-controller="Prodact" asp-action="Update">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
    </div>
    <div class="form-group">
        <label for="Content">Content</label>
        <textarea class="form-control" id="Content editor1" name="Content">@Model.Content</textarea>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price">
    </div>
    <div class="card mb-6">
        <div class="card-body">
            <div class="form-group">
                <img class="img-fluid mb-4" src="@Model.PhotoUrl" />
                <input type="file" class="form-control" name="photo" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>

@section Scripts{
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor1');
    </script>
}