@model About

<form class="container-xl" method="post" enctype="multipart/form-data">
    <div class="input-group input-group-lg">
        <span class="input-group-text" id="inputGroup-sizing-lg">Name</span>
        <input type="text" name="title" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-lg">
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="form-group">
        <label class="form-label"></label>
        <textarea id="editor1" class="form-control" name="content" ></textarea>
        <span class="text-danger" asp-validation-for="content"></span>
    </div>
    <div class="input-group">
        <input type="file" class="form-control" name="photo" id="inputGroupFile04"
            aria-describedby="inputGroupFileAddon04" aria-label="Upload">
        <button class="btn btn-outline-secondary" type="submit" id="inputGroupFileAddon04">Button</button>
    </div>
</form>








@section Scripts{
    <script src="https://cdn.ckeditor.com/4.20.1/standard/ckeditor.js"></script>

    <script>
        CKEDITOR.replace('editor1');
    </script>
}